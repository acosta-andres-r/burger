<h1>Eat-Da-Burger!</h1>

<ol>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devour=false}}
  {{/unless}}
  {{/each}}
</ol>

<ol>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devour=true}}
  {{/if}}
  {{/each}}
</ol>

<form class="create-form">
  <div class="form-group">
    <textarea type="text" id="bu" name="name">Enter a burger you want to eat.</textarea>
    <label for="bu"> Click the "Submit" button.</label>
    <button type="submit">Add Cat</button>
  </div>
</form>